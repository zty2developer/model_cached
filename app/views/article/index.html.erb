<!doctype html>
<html lang="en">
  <head>
    <title>Articles</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  </head>

  <body>
    <div class="container">
      <div class="row">
        <div class="col">
          <h2>Article List</h2>
        </div>
      </div>
      <div class="row">
        <div class="col">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Title</th>
                <th scope="col">Content</th>
                <th scope="col"></th>
                <th scope="col"></th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody>
              <% @articles.each do |article| %>
                <tr>
                  <td><%= article.title %></td>
                  <td><%= article.description%></td>
                  <td>
                    <%= link_to 'Show', article_path(article), class: "btn btn-light" %>
                  </td>
                  <td>
                    <%= link_to 'Edit', edit_article_path(article), class: "btn btn-primary" %>
                  </td>
                  <td>
                    <%= link_to 'Delete', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col">
          <%= link_to 'New Article', new_article_path, class: "btn btn-success" %>
        </div>
      </div>
    </div>
  </body>
</html>